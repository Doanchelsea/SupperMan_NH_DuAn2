<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_margin="@dimen/space_4"
    android:background="@drawable/bg_dialog"
    android:layout_height="@dimen/space_85"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout_swipe"
        android:gravity="center"
        android:layout_width="@dimen/space_80"
        android:layout_height="@dimen/space_80">

        <ImageView
            android:id="@+id/img_xoa_thanh_toan"
            android:tint="@color/red"
            android:src="@drawable/ic_delete"
            android:layout_width="@dimen/space_36"
            android:layout_height="@dimen/space_36" />

    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_85">
        <com.makeramen.roundedimageview.RoundedImageView
            android:scaleType="fitXY"
            android:id="@+id/img_item_thanh_toan"
            android:src="@color/black"
            app:riv_corner_radius="@dimen/space_10"
            android:layout_width="@dimen/space_75"
            android:layout_height="@dimen/space_75" />
        <TextView
            android:id="@+id/tv_mon_thanh_toan"
            android:textStyle="bold"
            android:text="Nguyễn Văn Đoàn"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_toRightOf="@+id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_price_thanh_toan"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:text="600.000 đ - giảm giá 15%"
            android:layout_margin="@dimen/space_6"
            android:layout_below="@+id/tv_mon_thanh_toan"
            android:layout_toRightOf="@id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_so_luong_thanh_toan"
            android:layout_marginLeft="@dimen/space_6"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:text="Số lượng : 2"
            android:layout_below="@+id/tv_item_price_thanh_toan"
            android:layout_toRightOf="@id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    </com.daimajia.swipe.SwipeLayout>
