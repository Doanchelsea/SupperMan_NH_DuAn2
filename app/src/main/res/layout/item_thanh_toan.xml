<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/space_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/space_4"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/img_item_thanh_toan"
            android:src="@color/black"
            android:layout_width="75dp"
            android:layout_height="75dp" />
        <TextView
            android:id="@+id/tv_mon_thanh_toan"
            android:textStyle="bold"
            android:text="Nguyễn Văn Đoàn"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_toRightOf="@+id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_price_thanh_toan"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:text="600.000 đ - giảm giá 15%"
            android:layout_margin="@dimen/space_6"
            android:layout_below="@+id/tv_mon_thanh_toan"
            android:layout_toRightOf="@id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_so_luong_thanh_toan"
            android:layout_marginLeft="@dimen/space_6"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:text="Số lượng : 2"
            android:layout_below="@+id/tv_item_price_thanh_toan"
            android:layout_toRightOf="@id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>