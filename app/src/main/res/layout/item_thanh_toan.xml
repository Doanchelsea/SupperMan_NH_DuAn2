<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_4"
    app:cardCornerRadius="@dimen/space_6"
    android:elevation="@dimen/space_6"
    android:layout_height="@dimen/space_85"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/relativeLayout_swipe"
        android:gravity="center"
        android:layout_width="@dimen/space_85"
        android:layout_height="@dimen/space_85">

        <ImageView
            android:id="@+id/img_xoa_thanh_toan"
            android:layout_width="@dimen/space_36"
            android:layout_height="@dimen/space_36"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_delete"
            android:tint="@color/red" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:padding="@dimen/space_5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_85">
        <com.makeramen.roundedimageview.RoundedImageView
            android:scaleType="fitXY"
            android:id="@+id/img_item_thanh_toan"
            android:src="@color/black"
            app:riv_corner_radius="@dimen/space_10"
            android:layout_width="@dimen/space_75"
            android:layout_height="@dimen/space_75" />
        <TextView
            android:id="@+id/tv_mon_thanh_toan"
            android:textStyle="bold"
            android:text="Nguyễn Văn Đoàn"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_price_thanh_toan"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:text="600.000 đ - giảm giá 15%"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_6"
            android:layout_marginBottom="@dimen/space_6"
            android:layout_below="@+id/tv_mon_thanh_toan"
            android:layout_toRightOf="@id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_so_luong_thanh_toan"
            android:layout_marginLeft="@dimen/space_10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:text="Số lượng : 2"
            android:layout_below="@+id/tv_item_price_thanh_toan"
            android:layout_toRightOf="@id/img_item_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>

    </androidx.cardview.widget.CardView>
