<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <TextView
        android:paddingRight="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:paddingTop="@dimen/space_16"
        android:paddingBottom="@dimen/space_10"
        app:layout_constraintWidth_percent="0.8"
        android:maxLines="1"
        android:lines="1"
        android:id="@+id/tv_text_thanh_toan_full"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tổng  hóa đơn là : 2.000.000 VNĐ "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        app:layout_constraintWidth_percent="0.8"
        android:maxLines="1"
        android:lines="1"
        android:id="@+id/tv_text_thanh_toan_dis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10"
        android:text="Số tiền giảm giá là : 2.000.000 VNĐ "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_thanh_toan_full"/>

    <TextView
        android:textSize="@dimen/text_size_16"
        app:layout_constraintWidth_percent="0.8"
        android:maxLines="1"
        android:lines="1"
        android:id="@+id/tv_text_thanh_toan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số tiền thanh toán là : 2.000.000 VNĐ"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingRight="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:paddingTop="@dimen/space_10"
        android:paddingBottom="@dimen/space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_thanh_toan_dis"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_thanh_toan" />

    <Button
        android:id="@+id/btn_cancel_xoa_thanh_toan"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/confirm_color_button_text"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_40"
        android:text="Hủy bỏ"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/space_1"
        android:layout_height="@dimen/space_40"
        android:background="@color/gray"
        app:layout_constraintEnd_toStartOf="@+id/btn_xac_nhan_thanh_toan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel_xoa_thanh_toan"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <Button
        android:id="@+id/btn_xac_nhan_thanh_toan"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Xác nhận"
        android:textAllCaps="false"
        android:textColor="@color/confirm_color_button_text"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/view1" />

</androidx.constraintlayout.widget.ConstraintLayout>
