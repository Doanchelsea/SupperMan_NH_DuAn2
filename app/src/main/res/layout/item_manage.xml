<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_5"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_corner_radius="@dimen/space_8"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/space_8"
        android:id="@+id/imgManage"
        android:src="@color/colorPrimary"
        android:layout_width="@dimen/space_120"
        android:layout_height="@dimen/space_100" />
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvNameManage"
        android:textColor="@color/black"
        android:text="Lẩu thái"
        android:textSize="@dimen/text_size_20"
        android:layout_toRightOf="@+id/imgManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTime"
        android:textColor="@color/black1"
        android:text="Thời gian : 10:30 - 23/12/1999"
        android:textSize="@dimen/text_size_16"
        android:layout_marginTop="@dimen/space_2"
        android:layout_toRightOf="@+id/imgManage"
        android:layout_below="@+id/tvNameManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/red"
        android:id="@+id/tvPrice"
        android:text="300.000 Đồng"
        android:textSize="@dimen/text_size_16"
        android:layout_marginTop="@dimen/space_2"
        android:layout_toRightOf="@+id/imgManage"
        android:layout_below="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black1"
        android:id="@+id/tvStatus"
        android:text="Đặt online"
        android:textSize="@dimen/text_size_16"
        android:layout_marginTop="@dimen/space_2"
        android:layout_toRightOf="@+id/imgManage"
        android:layout_below="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>